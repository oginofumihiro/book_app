<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

<p>
 <label>Title</label>
 <%= f.text_field :title %>
</p>

<p>
 <label>Body</label>
 <%= f.text_area :body %>
</p>

<p>
 <%= f.submit 'Update Book' %>
</p>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path(@book.id) %>

<% end %>
