<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>

<% @books.each do |book| %>

<tr>

 <td>
     <%= link_to book.title, book_path(book.id) %>
 </td>

 <td>
     <%= link_to book.body, book_path(book.id) %>
 </td>

 <td>
     <%= link_to 'Show', book_path(book.id) %>
 </td>

 <td>
     <%= link_to 'Edit', edit_book_path(book.id) %>
 </td>

 <td>
     <%= link_to 'Destory', books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
 </td>

</tr>

<% end %>

</table>


<h2>New Book</h2>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

<p>
 <label>Title</label>
 <%= f.text_field :title %>
</p>

<p>
 <label>Body</label>
 <%= f.text_area :body %>
</p>

<p>
 <%= f.submit 'create Book' %>
</p>

<% end %>
